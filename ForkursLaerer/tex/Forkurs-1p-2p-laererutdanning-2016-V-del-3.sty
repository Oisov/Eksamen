\newcommand{\drawTetris}[1]{%
  \begin{tikzpicture}
    \pgfmathtruncatemacro{\iEnd}{2+#1}
    \pgfmathtruncatemacro{\jEnd}{1+2*#1}
    {
      \foreach \i in {1,...,\iEnd}
      {
        \foreach \j in {1,...,\jEnd}
        \draw[fill=maincolorLight] (\i, \j) rectangle (\i+1, \j+1);
      }
    }

    \pgfmathtruncatemacro{\iEnd}{#1+1}
    \pgfmathtruncatemacro{\jEnd}{#1}

    {
      \foreach \i in {2,...,\iEnd}
      {
        \foreach \j in {1,...,\jEnd}
        \draw[fill=white] (\i, \j) rectangle (\i+1, \j+1);
      }
    }
  \end{tikzpicture}
}
